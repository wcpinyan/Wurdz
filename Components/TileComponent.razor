@inject AppState appState;
<li class="draggable text-center" draggable="true" 
style="list-style-type:none;display:block;" 
@ondragend="HandleDrop" 
@ondragstart="@(() => HandleDragStart(@item))">
<img style="border: 1px solid @item.borderColor" src="@item.url" width="30" height="30" alt="Scrabble tile piece" />
</li>


@code {
    [Parameter] public TileModel item{get;set;}
    [Parameter] public PlayerModel activePlayer{get;set;}
    [Parameter] public EventCallback OnDrop { get; set; }
    private async Task HandleDrop()
    {
        
        await OnDrop.InvokeAsync(this);
    }
    private void HandleDragStart(TileModel selectedTile)
    {
        item.borderColor="red";
        appState.selectedTile = item;
        Console.WriteLine("Player is dragging " + item.letter);
        
        //Container.Payload = selectedTile;
    }
}
